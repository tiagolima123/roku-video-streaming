<?xml version="1.0" encoding="utf-8" ?>
<component name="Stream" extends="Scene"> 
	<!-- BrightScript Portion -->
	<script type="text/brightscript" uri="pkg:/components/Stream.brs"/>
	<children>


		<Rectangle
			id="textEditBox"
			width="1280"
			height="720"
			color="0x000000"
			>



			<Label
				width="120"
				height="50"
				text="Filme"
				color="0xFFFFFF"
				translation="[80,200]"
				horizAlign="left"
				vertAlign="center"
				/>
			<TextEditBox
				id="hostInput"
				width="300"
				height="50"
				translation="[200,200]"
				backgroundUri="pkg:/images/purple2.png"
				textColor="0xFFFFFF"
				hintText="192.168.0.123"
				hintTextColor="0x999999"
				/>


					

			<Label
				width="10"
				height="50"
				text=":"
				color="0xFFFFFF"
				translation="[505,200]"
				horizAlign="left"
				vertAlign="center"
				/>

			<TextEditBox
				id="portInput"
				width="100"
				height="50"
				translation="[520,200]"
				backgroundUri="pkg:/images/purple2.png"
				textColor="0xFFFFFF"
				hintText="4567"
				hintTextColor="0x999999"
				/>

			<Poster
				width="30"
				height="50"
				translation="[620,200]"
				uri="pkg:/images/slash.png"
				loadDisplayMode="scaleToFit"
				/>


			<TextEditBox
				id="pathInput"
				width="200"
				height="50"
				translation="[650,200]"
				backgroundUri="pkg:/images/purple2.png"
				textColor="0xFFFFFF"
				hintText="movie.mp4"
				hintTextColor="0x999999"
				/>


			
			


			
			<Label
				width="120"
				height="50"
				text="Subtitle"
				color="0xFFFFFF"
				translation="[80,300]"
				horizAlign="left"
				vertAlign="center"
				/>
			<TextEditBox
				id="hostInputS"
				width="300"
				height="50"
				translation="[200,300]"
				backgroundUri="pkg:/images/purple2.png"
				textColor="0xFFFFFF"
				hintText="192.168.0.123"
				hintTextColor="0x999999"
				/>

			<Label
				width="10"
				height="50"
				text=":"
				color="0xFFFFFF"
				translation="[505,300]"
				horizAlign="left"
				vertAlign="center"
				/>

			<TextEditBox
				id="portInputS"
				width="100"
				height="50"
				translation="[520,300]"
				backgroundUri="pkg:/images/purple2.png"
				textColor="0xFFFFFF"
				hintText="4567"
				hintTextColor="0x999999"
				/>

			<Poster
				width="30"
				height="50"
				translation="[620,300]"
				uri="pkg:/images/slash.png"
				loadDisplayMode="scaleToFit"
				/>


			<TextEditBox
				id="pathInputS"
				width="200"
				height="50"
				translation="[650,300]"
				backgroundUri="pkg:/images/purple2.png"
				textColor="0xFFFFFF"
				hintText="subtitle.srt"
				hintTextColor="0x999999"
				/>
			
			





			<Label
				id="connect"
				width="200"
				height="50"
				text="Conectar"
				translation="[890,300]"
				horizAlign="left"
				vertAlign="center"
				/>




			<Poster
				id="cursor"
				width="300"
				height="5"
				uri="pkg:/images/cursor.png"
				translation="[200, 245]"
				loadDisplayMode="scaleToFit"
				/>
			

			<ParallelAnimation
				id = "myAnimC" 
				repeat="false">


				<Animation
       					duration="0.2"
			       		repeat="false"
					easeFunction="linear" >
					<Vector2DFieldInterpolator 
						id="translationAnimC"
        					key="[0.0, 1.0]"
				        	keyValue=""
						fieldToInterp="cursor.translation" />
				</Animation>


				<Animation
	       				duration="0.1"
				       	repeat="false"
					easeFunction="linear" >

					<FloatFieldInterpolator
						id = "widthAnimC" 
						key="[0.0, 1.0]"
						keyValue="[]"
						fieldToInterp="cursor.width" />
				</Animation>

			</ParallelAnimation>






			<Keyboard
				id="keyboard"
				translation="[100, 450]"
				showTextEditBox="false"
				focusedKeyColor="0x720EEE"
				keyboardBitmapUri="pkg:/images/purple.png"
				/>

			<Animation
				id="myAnimK"
       				duration="0.2"
			       	repeat="false"
				easeFunction="linear" >
				<Vector2DFieldInterpolator 
					id="translationAnimK"
        				key="[0.0, 1.0]"
				        keyValue=""
					fieldToInterp="keyboard.translation" />
			</Animation>


		</Rectangle>

		<Video id="video" 
      			width="1280" 
		      	height="720" 
			visible="false"
			/>
	</children>
</component>
